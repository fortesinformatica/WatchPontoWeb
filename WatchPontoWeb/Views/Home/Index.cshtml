@using WatchPontoWeb.Models
@model FiltroExtrato

<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            <form class="form-horizontal" method="post" role="form" novalidate="novalidate">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.PIS, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PIS, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PIS, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Consultar" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Extrato de Ponto</h2>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}